
set $mod Mod4
focus_follows_mouse no
font pango:Font Awesome 13
#for_window [class="^.*"] border pixel 3
default_border pixel 5
default_floating_border pixel 3
floating_modifier $mod
# class                 border  backgr. text    indicator child_border
client.focused          #905090 #202020 #ffffff #c080c0   #a060a0
client.focused_inactive #804020 #202020 #ffffff #404040   #805090
client.unfocused        #404040 #202020 #888888 #404040   #503050
client.urgent           #901010 #202020 #ffffff #900000   #a02020
client.placeholder      #000000 #202020 #ffffff #000000   #000000
client.background       #202020

bindsym --border button2 move container to workspace number 1
bindsym --border button3 move container to workspace number 2
bindsym --border button4 move up
bindsym --border button5 move down
bindsym --whole-window button6 fullscreen toggle
bindsym --whole-window button7 kill
bindsym --border button8 move left
bindsym --border button9 move right

bindsym $mod+grave exec xterm -ls -e "sleep 0.1 && slock"
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+minus exec pulsemixer --change-volume \-4
bindsym $mod+equal exec pulsemixer --change-volume +4
bindsym $mod+0 exec pulsemixer --toggle-mute

bindsym $mod+Tab focus mode_toggle
bindsym $mod+q kill
bindsym $mod+w exec i3-msg split horizontal && qutebrowser
bindsym $mod+Shift+w exec i3-msg split vertical && qutebrowser
bindsym $mod+e exec i3-msg split horizontal && alacritty -e ranger
bindsym $mod+Shift+e exec i3-msg split vertical && alacritty -e ranger
bindsym $mod+r exec dmenu_run -l 20 -fn Hack-16 -nb \#202020 -nf \#a0a0a0 -sb \#404040 -sf \#c0c0c0
bindsym $mod+Ctrl+q exec i3-msg exit
bindsym $mod+Ctrl+r exec i3-msg reload
bindsym $mod+Ctrl+e exec i3-msg restart
# t
# y
# u
# i
bindsym $mod+o exec i3-msg split vertical && alacritty -e htop
bindsym $mod+Shift+o exec i3-msg split horizontal && alacritty -e htop
# p
bindsym $mod+bracketleft exec xrandr_brightness_down
bindsym $mod+bracketright exec xrandr_brightness_up
bindsym $mod+backslash exec xrandr_brightness 1.0

# a
# s
bindsym $mod+d exec gsimplecal
bindsym $mod+f fullscreen toggle
bindsym $mod+g floating toggle
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Ctrl+h resize shrink width 10 px or 10 ppt
bindsym $mod+Ctrl+j resize grow height 10 px or 10 ppt
bindsym $mod+Ctrl+k resize shrink height 10 px or 10 ppt
bindsym $mod+Ctrl+l resize grow width 10 px or 10 ppt
bindsym $mod+semicolon exec dmenu_abstract
# apostrophe
bindsym $mod+Return exec i3-msg split vertical && alacritty
bindsym $mod+Shift+Return exec i3-msg split horizontal && alacritty

#bindsym $mod+z gaps outer current minus 5
#bindsym $mod+x gaps outer current plus 5
bindsym $mod+c exec i3-msg split vertical && qalculate-gtk
bindsym $mod+Shift+c exec i3-msg split horizontal && qalculate-gtk
bindsym $mod+v exec i3-msg split vertical && pavucontrol
bindsym $mod+Shift+v exec i3-msg split horizontal && pavucontrol
# b
# n
# m
bindsym $mod+comma focus parent
bindsym $mod+period focus child
bindsym $mod+slash split toggle

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
bindsym $mod+Ctrl+Left resize shrink width 10 px or 10 ppt
bindsym $mod+Ctrl+Down resize grow height 10 px or 10 ppt
bindsym $mod+Ctrl+Up resize shrink height 10 px or 10 ppt
bindsym $mod+Ctrl+Right resize grow width 10 px or 10 ppt

