mode "move" {
    bindsym $mod+Escape mode "default"
    bindsym $mod+m mode "rodent"
    bindsym --border button2 mode "default"

    bindsym --border button1 move left
    bindsym --border button3 move right
    bindsym --border button4 move up
    bindsym --border button5 move down

    bindsym --border button8 move container to workspace prev
    bindsym --border button9 exec --no-startup-id i3-move-container-right
}

mode "resize" {
    bindsym $mod+Escape mode "default"
    bindsym $mod+m mode "rodent"
    bindsym --border button2 mode "default"

    bindsym --border button1 resize shrink width 32 px
    bindsym --border button3 resize grow width 32 px
    bindsym --border button4 resize grow height 32 px
    bindsym --border button5 resize shrink height 32 px
    bindsym --border Shift+button1 resize shrink width 128 px
    bindsym --border Shift+button3 resize grow width 128 px
    bindsym --border Shift+button4 resize grow height 128 px
    bindsym --border Shift+button5 resize shrink height 128 px

    bindsym --border button8 floating toggle
    #bindsym --border button9 
}

mode "rodent" {
    bindsym $mod+Escape mode "default"
    bindsym $mod+m mode "default"
    bindsym --border button2 mode "default"

    bindsym $mod+Ctrl+h exec --no-startup-id xdotool mousemove_relative -- -16 0
    bindsym $mod+Ctrl+j exec --no-startup-id xdotool mousemove_relative -- 0 +16
    bindsym $mod+Ctrl+k exec --no-startup-id xdotool mousemove_relative -- 0 -16
    bindsym $mod+Ctrl+l exec --no-startup-id xdotool mousemove_relative -- +16 0
    bindsym $mod+h exec --no-startup-id xdotool mousemove_relative -- -32 0
    bindsym $mod+j exec --no-startup-id xdotool mousemove_relative -- 0 +32
    bindsym $mod+k exec --no-startup-id xdotool mousemove_relative -- 0 -32
    bindsym $mod+l exec --no-startup-id xdotool mousemove_relative -- +32 0
    bindsym $mod+Shift+h exec --no-startup-id xdotool mousemove_relative -- -64 0
    bindsym $mod+Shift+j exec --no-startup-id xdotool mousemove_relative -- 0 +64
    bindsym $mod+Shift+k exec --no-startup-id xdotool mousemove_relative -- 0 -64
    bindsym $mod+Shift+l exec --no-startup-id xdotool mousemove_relative -- +64 0
    bindsym $mod+a exec --no-startup-id xdotool click 1
    bindsym $mod+s exec --no-startup-id xdotool click 2
    bindsym $mod+d exec --no-startup-id xdotool click 3
    bindsym $mod+f exec --no-startup-id xdotool click 4
    bindsym $mod+g exec --no-startup-id xdotool click 5
}

bar {
    status_command i3blocks-idm
    colors {
        background #400a2a
        statusline #e0e0e0

        focused_workspace  #e0caca #402080 #e0caca
        active_workspace   #e0caca #808080 #e0caca
        inactive_workspace #e0caca #802040 #e0caca
        urgent_workspace   #ff4040 #b02020 #ff0000
    }
}

exec --no-startup-id ~/.xinitrc2

