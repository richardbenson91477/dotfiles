
set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
font pango:Noto Sans 10
# class                 border  backgr. text    indicator child_border
client.focused          #905090 #202020 #ffffff #c080c0   #a060a0
client.focused_inactive #704080 #202020 #ffffff #404040   #805090
client.unfocused        #402040 #202020 #888888 #404040   #503050
client.urgent           #901010 #202020 #ffffff #900000   #a02020
client.placeholder      #000000 #202020 #ffffff #000000   #000000
client.background       #202020

for_window [class="^.*"] border pixel 4
gaps inner 3 
gaps outer 3
smart_gaps on

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
#exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

# Use rodent+$mod to drag floating windows to their wanted position
floating_modifier $mod

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
# minus
# equals
# backspace

bindsym $mod+Tab focus mode_toggle
bindsym $mod+q kill
bindsym $mod+w exec librewolf
bindsym $mod+e exec kitty nnn
#bindsym $mod+r mode "resize"
bindsym $mod+r exec dmenu_run
bindsym $mod+Shift+e exec dmenu_abstract files
bindsym $mod+Shift+r exec dmenu_abstract apps
bindsym $mod+Ctrl+q exec i3-msg exit
bindsym $mod+Ctrl+r exec i3-msg reload
bindsym $mod+t exec kitty
# y
# u
# i
# o
# p
bindsym $mod+bracketleft exec xrandr_brightness_down
bindsym $mod+bracketright exec xrandr_brightness_up
bindsym $mod+backslash exec xrandr_brightness 1.0

bindsym $mod+a gaps inner current minus 5
bindsym $mod+s gaps inner current plus 5
# d
bindsym $mod+f fullscreen toggle
# g
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Ctrl+h resize shrink width 10 px or 10 ppt
bindsym $mod+Ctrl+j resize grow height 10 px or 10 ppt
bindsym $mod+Ctrl+k resize shrink height 10 px or 10 ppt
bindsym $mod+Ctrl+l resize grow width 10 px or 10 ppt
bindsym $mod+semicolon exec dmenu_abstract
# '
bindsym $mod+Return exec kitty

bindsym $mod+z gaps outer current minus 5
bindsym $mod+x gaps outer current plus 5
bindsym $mod+c exec qalculate-gtk
bindsym $mod+v exec kitty pulsemixer
bindsym $mod+b floating toggle
bindsym $mod+n split v
bindsym $mod+m split h

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
bindsym $mod+Ctrl+Left resize shrink width 10 px or 10 ppt
bindsym $mod+Ctrl+Down resize grow height 10 px or 10 ppt
bindsym $mod+Ctrl+Up resize shrink height 10 px or 10 ppt
bindsym $mod+Ctrl+Right resize grow width 10 px or 10 ppt

bar {
        status_command date_status
}

focus_follows_mouse no

exec xmodmap_load
exec create_cache_links
exec pipewire
exec xwallpaper --stretch ~/.background
#exec picom
exec dunst -print > ~/.cache/dunst.log

