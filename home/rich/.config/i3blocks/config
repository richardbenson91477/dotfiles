[greetings]
full_text="rich@dash"
color=#f080a0
command=i3blocks_mouse_launcher alacritty -e htop

# Guess the weather hourly
[weather]
command=curl -Ss 'https://wttr.in?0&T&Q' | cut -c 16- | head -2 | xargs echo
interval=3600
color=#A4C2F4

[time]
command=date +"%a %b %d %y %I:%M %p"
interval=60
